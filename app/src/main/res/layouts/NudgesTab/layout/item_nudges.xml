<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="80dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--View for holding Profile Image-->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:background="@color/colorWhite"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:layout_marginLeft="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/nudges_contactImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    app:civ_border_color="@color/colorText"
                    app:civ_border_width="0dp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|left"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/nudges_nameTextView"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@color/colorBackground"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/nudges_timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="bottom"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/nudges_nudgeBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/ic_nudge_plain"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" >
                    </Space>

                    <ImageButton
                        android:id="@+id/nudges_messageBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/ic_message_plain"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" >
                    </Space>


                    <ImageButton
                        android:id="@+id/nudges_callBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/ic_call_plain"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" >
                    </Space>

                    <ImageButton
                        android:id="@+id/nudges_scheduleBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/ic_schedule_plain"/>


                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" >
                    </Space>


                    <ImageButton
                        android:id="@+id/nudges_rejectBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_cancel_plain"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>