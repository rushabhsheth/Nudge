<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/putbackBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_putback" />

    <ImageButton
        android:id="@+id/rejectBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="@dimen/actionbutton_margin"
        android:background="@drawable/ic_cancel" />

    <ImageButton
        android:id="@+id/messageBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="@dimen/actionbutton_margin"
        android:background="@drawable/ic_message" />

    <ImageButton
        android:id="@+id/nudgeBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/ic_nudge" />

    <!--<ImageButton-->
        <!--android:id="@+id/scheduleBtn"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:background="@drawable/ic_schedule" />-->

</LinearLayout>
