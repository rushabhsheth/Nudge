    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (50% transparency) -->
        <item name="colorControlActivated">@color/colorMaterialGreen600</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorMaterialGrey</item>

        <!-- inactive track color (50% transparency) -->
        <item name="android:colorForeground">@color/colorMaterialGrey</item>
    </style>

    <style name="ThemeOverlay.FilterButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

